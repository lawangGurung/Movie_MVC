@model Anime
<div class="container border p-4">
    <h1 class="text-danger">DELETE</h1>
    <h3> Are you sure you want to delete this ?</h3>
    <div class="">
        <h4 class="text-primary">Anime</h4>
        <hr>
        <div class="card-group">
            <div class="card mb-3 ml-5" style="max-width: 650px;">
                <div class="row no-gutters text-center">
                    <div class="col-md-4">
                        <img src="@Model.ImageURL" class="card-img" onerror="this.src='No_Image.jpg'">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Title</h5>
                            <p class="card-text">@Model.Description</p>
                            <p class="card-text"><small class="text-muted">@Model.Metadata</small></p>
                            <p class="card-text"><small class="text-muted">Rating:- @Model.Rating</small></p>
                        </div>
                    </div>
                </div>
            </div>

             <div class="card mb-3 ml-5 d-flex justify-content-center align-items-center" style="max-width: 650px;">
                <div class="form-control border-0">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="@Model.Id">
                        <button type="submit" class="btn btn-danger form-control"><i class="bi bi-trash"></i> Delete</button>
                    </form>
                     <a asp-controller="Anime" asp-action="Index" class="btn btn-primary form-control"> Back to list</a>
                </div>
            </div>

        </div>
    </div>
</div>