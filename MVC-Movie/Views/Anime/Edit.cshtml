@model Anime

<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">EDIT ANIME</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row">
            <input type="hidden" asp-for="Id">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow">
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Metadata" class="form-control border-0 shadow">
                        <label asp-for="Metadata" class="ms-2"></label>
                        <span asp-validation-for="Metadata" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-6">
                        <input asp-for="Rating" class="form-control border-0 shadow">
                        <label asp-for="Rating"></label>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ImageURL" class="form-control border-0 shadow">
                    <label asp-for="ImageURL" class="ms-2"></label>
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow" rows="3" style="height:100px"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                 <div class="row pt-2">
                    <div class="col-6">
                        <input type="submit" value="Save" class="btn btn-success form-control" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="form-control btn btn-outline-primary border">Back to List</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

