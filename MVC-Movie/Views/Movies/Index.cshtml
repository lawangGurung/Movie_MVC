@model MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> MOVIE LIST</h2>
            </div>
        </div>
    </div>
    
    <div class="card-body p-4">
        <div class="row">
            <div class="col-6">
                <h2>CREATE</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square text-bold"></i> CREATE
                    NEW</a>
            </div>

        </div>

    @* this is to filter the movie list  *@
        <form asp-controller="Movies" asp-action="Index" method="get">
            <div>
                <select asp-for="MovieGenre" asp-items="Model.Genres" class="">
                    <option value="">All</option>
                </select>
                <div style="display: inline" class="mx-3">
                    <label>Title: <input type="text" asp-for="SearchString"></label>
                </div>
            </div>
            <button type="submit" value="Filter" class="my-3 btn btn-secondary text-dark"><i class="bi bi-funnel"></i>
                Filter</button>
        </form>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies![0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies![0].Genre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies![0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movies![0].Rating)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Movies!)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReleaseDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
