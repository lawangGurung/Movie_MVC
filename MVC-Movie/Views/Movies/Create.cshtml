@model MVC_Movie.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">CREATE MOVIE</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form asp-action="Create" method="post" class="row">
            <div class="border p-3">
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@

                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Rating" class="form-control border-0 shadow">
                    <label asp-for="Rating" class="ms-2"></label>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ReleaseDate" class="form-control border-0 shadow" />
                    <label asp-for="ReleaseDate" class="ms-2"></label>
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Genre" class="form-control border-0 shadow" />
                    <label asp-for="Genre" class="ms-2"></label>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6">
                        <input type="submit" value="Create" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="form-control btn btn-outline-primary border">Back to List</a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
